<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".VerificationFragment">

    <LinearLayout
        android:gravity="center"
        android:layout_margin="20sp"
        android:background="@drawable/white_border_with_shadow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="30sp"
            android:id="@+id/VerifyTextView"
            android:textSize="18sp"
            android:gravity="center"
            android:text="We sent verification code to your phone number"
            android:layout_marginHorizontal="30sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"></TextView>

        <EditText
            android:layout_marginVertical="30sp"
            android:maxLength="6"
            android:id="@+id/VerificationCodeEditText"
            android:hint="verification code"
            android:inputType="number"
            android:layout_marginHorizontal="30sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"></EditText>

        <RelativeLayout
            android:id="@+id/VerifyPhoneNumber"
            android:layout_marginBottom="30sp"
            android:layout_marginHorizontal="30sp"
            android:background="@drawable/gradient_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Verify"
                android:layout_width="match_parent"
                android:layout_height="60sp"></TextView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>