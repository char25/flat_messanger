<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.AuthFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_margin="20sp"
            android:background="@drawable/white_border_with_shadow"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="30sp"
                android:src="@drawable/authentication"
                android:layout_width="120sp"
                android:layout_height="120sp"></ImageView>

            <TextView
                android:layout_marginTop="30sp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Write your phone number"
                android:layout_marginHorizontal="30sp"
                android:layout_width="match_parent"
                android:layout_height="50sp"></TextView>

            <EditText
                
                android:text="+380111111111"
                android:id="@+id/PhoneNumberEditText"
                android:hint="Phone number"
                android:inputType="phone"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:layout_marginHorizontal="30sp"
                android:layout_width="match_parent"
                android:layout_height="50sp"></EditText>

            <RelativeLayout
                android:id="@+id/LoginWithPhone"
                android:layout_marginBottom="30sp"
                android:layout_marginHorizontal="30sp"
                android:background="@drawable/gradient_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="Login in"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"></TextView>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>